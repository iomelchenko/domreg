<h1>Listing domains</h1>

<table>
  <tr>
    <th>DomainName</th>
    <th>State</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @domains.each do |domain| %>
  <tr>
    <td><%= domain.name %><%= '.' + domain.domain_zone.zone_name %></td>
    <td><%= domain.domain_state.state_name %></td>
    <td><%= link_to 'Show', domain %></td>
    <td><%= link_to 'Edit', edit_domain_path(domain) %></td>
    <td><%= link_to 'Register now', new_order_path(domain_id: domain.id) %></td>
    <td><%= link_to 'Destroy', domain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />